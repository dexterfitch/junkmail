<form>
  <div class="form-group">
    <label for="email">Email</label>
    {{input id="email" class="form-control" value=email}}
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    {{input id="name" class="form-control" value=name}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input id="title" class="form-control" value=title}}
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    {{textarea id="body" class="form-control" value=body rows="8"}}
  </div>
  <button class="btn btn-alert" {{action 'save'}}>Save</button>
</form>
